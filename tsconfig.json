{
  "compilerOptions": {
    "target": "es2018",                         
    "module": "commonjs",                     
    "sourceMap": true,                         
    "outDir": "./dist",                         
    "strict": true,                            
    "moduleResolution": "node",
    "resolveJsonModule": true,    
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false    
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
